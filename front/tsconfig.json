{
    "extends": "@vue/tsconfig/tsconfig.json",
    "include": [
        "src/**/*",
        "src/**/*.vue",
        "src/*.vue",
        "src/**/*.ts",
        "src/*.ts",
        "src/*.js",
    ],
    "exclude": [
        "node_modules",
    ],
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitReturns": true,
        "isolatedModules": true,
        "noImplicitAny": true,
        "baseUrl": "./",
        "outDir": "./",
        "allowJs": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
        },
        "lib": [
            "dom",
        ]
    },
}